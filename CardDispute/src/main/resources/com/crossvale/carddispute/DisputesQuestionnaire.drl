package com.crossvale.carddispute;


rule "Question 1"
	no-loop true
	ruleflow-group "disputes"
	dialect "mvel"
	when
		disputesQuestionnaire : Questionnaire( answerCode == "1" )
	then
		modify( disputesQuestionnaire ){ setQuestion("Why are you submitting this dispute?") };
		System.out.println(disputesQuestionnaire.getQuestion()); 
		
end

